<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:simpleCore="clr-namespace:SimpleToolkit.Core;assembly=SimpleToolkit.Core"
    x:Class="Marvelous.Maui.Views.Controls.HorizontalSeparator">
    
    <Grid
        ColumnDefinitions="*, 28, *"
        ColumnSpacing="20"
        HeightRequest="28"
        CompressedLayout.IsHeadless="True">
        <ContentView
            x:Name="leftRect"
            AnchorX="1"
            HeightRequest="1.2"
            VerticalOptions="Center"/>

        <simpleCore:Icon
            x:Name="icon"
            Source="common_compass_full.png"
            Grid.Column="1"/>

        <ContentView
            x:Name="rightRect"
            Grid.Column="2"
            AnchorX="0"
            HeightRequest="1.2"
            VerticalOptions="Center"/>
    </Grid>
</ContentView>
